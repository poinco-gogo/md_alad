TARGET=md_alad_ewald.x

CXX=icpc

CXXFLAGS= -O3 -std=c++11 -I/home/hoge/include -L/home/hoge/lib

LIBS=

SRCS = Atom.cpp PDBUtil.cpp PSF.cpp md_alad_ewald.cpp

OBJS = $(SRCS:.cpp=.o)

HEADS= common.hpp Lattice.hpp Atom.hpp PDBUtil.hpp PSF.hpp

$(TARGET): $(OBJS) $(HEADS)
	$(CXX) $(CXXFLAGS) -o $(TARGET) $(OBJS) $(LIBS)

depend:
	$(CXX) $(CXXFLAGS) -MM -MG $(SRCS) > Makefile.depend

clean:
	rm -f $(OBJS) $(TARGET)

-include Makefile.depend
